<div id="wraper_session">
  <div id="session">
    <% if alert %>
      <div class="flash flash-alert"> <%= alert %></div>
    <% else %>
      <div class="flash flash-alert"> <%= t('admin.sessions.login.alert_login') %></div>
    <% end -%>
    <div class="session_content">
      <div id="login">
        <h2><%= t('admin.sessions.login.title')%></h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="inputs">
            <%= f.label :email, t('email') %>
            <%= f.text_field :email ,class: "input-field"%>
          </div>
          <div class="inputs">
            <%= f.label :password, t('password') %>
            <%= f.password_field :password, class: "input-field" %>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="remember">
              <%= f.check_box :remember_me %><%= t('remember')%>
            </div>
          <% end -%>
          <div class="action">
            <%= f.submit t('login'), :disable_with => t('login_submit') %>
            <%= link_to t('forgot_password'),new_password_path(resource_name)%>
          </div>
        <% end -%>
      </div>
    </div>
  </div>
</div>

